generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int       @id @default(autoincrement()) @db.Integer
  username String
  email    String    @unique
  photos   String
  orders   pedidos[]
}

model products {
  id     Int       @id @default(autoincrement()) @db.Integer
  name   String[]  @unique
  price  String[]
  colors color[]
  sizes  size[]
  photos String[]
  orders pedidos[]
}

model pedidos {
  id              Int      @id @default(autoincrement()) @db.Integer
  product         products @relation(fields: [producto], references: [id])
  user            users    @relation(fields: [usuario], references: [id])
  color           color
  size            size
  shippingaddress String[]
  billingaddress  String[]
  usuario         Int      @db.Integer // @relation with (_id)  @model: users  @config: MANUAL //
  producto        Int      @db.Integer
}

enum color {
  Red
  Green
  Blue
}

enum size {
  Small
  Medium
  Large
  XLarge
}
