{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],
        "@routes/*": ["src/routes/*"]
      },
    },
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
          "rootDir": "."
        }
      },
}





